<body>
<div class="header">
    <div class="navbar">
        <div class="logo">Plant Sightings</div>
        <ul>
            <li><a href="/overview">Overview</a></li>
            <li><a href="/modify/addPlant">Add</a></li>
            <li><a href="https://github.com/captainLegoo/TeamMSc09" class="nav-button">
                    <img style="width: 20px; height: 20px;" src="/images/github_logo.png" alt="GitHub">
                </a></li>
        </ul>
    </div>
</div>


    <!-- Title and Description -->
    <div class="title-section">
        <h2 class="title" id="plantName"></h2>
        <p class="description" id="plantDescription"></p>
    </div>

    <!-- Details Section -->
    <div class="details">
        <div class="detail-half">
            <div class="detail-label">Name</div>
            <div class="detail-value" id="name"></div>
            <div class="detail-label">Description</div>
            <div class="detail-value" id="description"></div>
            <div class="detail-label">DBpedia Description</div>
            <div class="detail-value" id="dbpedia_description"></div>
            <div class="detail-label">Photo</div>
            <label  class="detail-photo">
                <!-- Assuming you have a URL for the photo -->
                <img class="photoView" id="plantPhoto" src="" alt="" >
            </label>
        </div>
        <div class="detail-half">
            <div class="attribute-grid">
                <!-- Attributes -->
                <div class="attribute-item">
                    <span class="detail-value-question">Add Time</span>
                    <span class="detail-value-question">Has Flower?</span>
                    <span class="detail-value-question">Has Leaf?</span>
                    <span class="detail-value-question">Has Gain?</span>
                    <span class="detail-value-question">Sun?</span>
                    <span class="detail-value-question">Color</span>
                    <span class="detail-value-question">DBPedia</span>
                    <span class="detail-value-question">Status</span>
                    <span class="detail-value-question">User Nickname</span>
                    <span class="detail-value-question">Plant Size</span>
<!--                    <span class="detail-value-question">Your Nick Name</span>-->
                    <span class="detail-value-question">Position</span>
                </div>
                <div class="attribute-item">
                    <div class="detail-value-attribute-time" id="dataTime"></div>
                    <div class="detail-value-attribute" id="flower"></div>
                    <div class="detail-value-attribute" id="leaves"></div>
                    <div class="detail-value-attribute" id="seeds"></div>
                    <div class="detail-value-attribute" id="sun"></div>
                    <div class="detail-value-attribute" id="color"></div>
                    <div class="detail-value-attribute">
                        <button id="uri" onclick="">URI</button>
                    </div>
                    <div class="detail-value-attribute" id="status"></div>
                    <div class="detail-value-attribute" id="nickName"></div>
                    <div class="detail-value-attribute-edit-pos">
                        <label>Height (cm)</label>
                        <label>
                            <input class="detail-value-attribute-pos-input" type="number" id ="plantSize_height" name="plantSize_height" disabled>
                        </label>
                        <label>Spread (cm)</label>
                        <label>
                            <input class="detail-value-attribute-pos-input" type="number" id ="plantSize_spread" name="plantSize_spread" disabled>
                        </label>
                    </div>
                    <div class = detail-value-attribute-edit-pos>
                        <label>latitude</label>
                        <label>
                            <input class="detail-value-attribute-pos-input" type="text" name="latitude" id="latitude" disabled>
                        </label>
                        <label>longitude</label>
                        <label>
                            <input class="detail-value-attribute-pos-input" type="text" name="longitude" id="longitude" disabled>
                        </label>
                    </div>
                </div>
                <!-- Repeat for each attribute -->
            </div>
<!--            <button class="detail-value-attribute" id="editButton">EDIT</button>-->
