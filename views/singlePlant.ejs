<!--                }-->
<!--            </script>-->
        </div>
    </div>

    <!-- Discussion Section -->
    <div class="discussion">
        <div class="chat-container">
            <h3 class="discussion-title">DISCUSSION FORUM</h3>
            <form class="comment-history-form" action="">
                <ul id="message">
                    <!-- Comments will be added here dynamically -->
                </ul>
            </form>
            <div id="chat-send" class="comment-form">
                <textarea id="chat-input" name="comment" rows="4" placeholder="LEAVE A COMMENT"></textarea>
                <button id="sendButton">Send</button>
            </div>
        </div>
    </div>

</div>
