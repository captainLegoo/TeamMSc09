<!DOCTYPE html>
<html lang="en">

<head>
    <base href="http://localhost:3000/">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Sightings</title>
    <link rel="stylesheet" href="stylesheets/singlePlant.css">
    <script src="https://cdn.socket.io/4.5.4/socket.io.min.js"></script>
</head>

<body>
<div class="container">
    <!-- Header -->
    <div class="header">
        <h1 class="header-title">Plant Sightings</h1>
        <div>
            <button class="header-button">Home</button>
            <button class="header-button">Overview</button>
            <button class="header-button">Add</button>
            <button class="header-button">Github</button>
        </div>
    </div>

    <!-- Title and Description -->
    <div class="title-section">
        <h2 class="title"><%= data.identification.name %></h2>
        <p class="description">===========================<%= data.description %>===========================</p>
    </div>

    <!-- Details Section -->
    <div class="details">
        <div class="detail-half">
            <div class="detail-label">Name</div>
            <div class="detail-value"><%= data.identification.name %></div>

            <div class="detail-label">Description</div>
            <div class="detail-value"><%= data.description %></div>

            <div class="detail-label">Photo</div>
            <label  class="detail-photo">
                <!-- Assuming you have a URL for the photo -->
                <img src="<%= data.photo %>" alt="Photo of <%= data.identification.name %>">
            </label>
        </div>
        <div class="detail-half">
            <div class="attribute-grid">
                <!-- Attributes -->
                <div class="attribute-item">
                    <span class="detail-value-question">Has Flower?</span>
                    <span class="detail-value-question">Has Leaf?</span>
                    <span class="detail-value-question">Has Gain?</span>
                    <span class="detail-value-question">Sun?</span>
                    <span class="detail-value-question">Color</span>
                    <span class="detail-value-question">Position</span>
                    <span class="detail-value-question">DBPedia</span>
                </div>
                <div class="attribute-item">
                    <div class="detail-value-attribute"><%= data.haveFlower ? 'Yes' : 'No' %></div>
                    <div class="detail-value-attribute"><%= data.haveLeaves ? 'Yes' : 'No' %></div>
                    <div class="detail-value-attribute"><%= data.haveSeeds ? 'Yes' : 'No' %></div>
                    <div class="detail-value-attribute"><%= data.sunExposure %></div>
                    <div class="detail-value-attribute"><%= data.flowerColor %></div>
                    <div class="detail-value-attribute"><%= data.location.coordinates[0] %><%= data.location.coordinates[1] %></div>
                    <button class="detail-value-attribute" onclick="redirectToPlantPage('<%= data.identification.dbpediaInfo.uri %>')">URL</button>
                    <script>
                        function redirectToPlantPage(url) {
                            window.location.href = url;
                        }
                    </script>
                </div>
                <!-- Repeat for each attribute -->
            </div>
        </div>
    </div>

    <!-- Discussion Section -->
    <div class="discussion">
        <div class="chat-container">
            <h3 class="discussion-title">DISCUSSION FORUM</h3>
            <form id="chat-history" class="comment-history-form"></form>
            <form class="comment-form" action="/add-comment" method="POST">
                <textarea type="text" id="chat-input" name="comment" rows="4" placeholder="LEAVE A COMMENT"></textarea>
                <button onclick="sendMessage()">Send</button>
            </form>
        </div>

        <script>
            var socket = io();  // Connect to the server through socket

            socket.on('message', function(msg) {
                var messageElement = document.createElement('div');
                messageElement.textContent = msg;
                document.getElementById('chat-history').appendChild(messageElement);
            });


            function sendMessage() {
                var message = document.getElementById('chat-input').value;
                socket.emit('message', message);
                document.getElementById('chat-input').value = '';  // Clear input after sending
            }
        </script>

        <!-- Comment Form -->
        <form class="comment-form" action="modify/add-comment" method="POST">
            <input type="hidden" name = "_id" value="<%=data._id%>">
            <textarea name="comment" rows="4" placeholder="LEAVE A COMMENT"></textarea>
            <button type="submit">Submit</button>
        </form>

    </div>
</div>
</body>

</html>
