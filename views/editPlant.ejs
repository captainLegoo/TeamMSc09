<!DOCTYPE html>
<html lang="en">

<head>
    <base href="http://localhost:3000/">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plant Edit</title>
    <link rel="stylesheet" href="stylesheets/singlePlant.css">
</head>

<body>
<div class="container">
    <!-- Header -->
    <div class="header">
        <h1 class="header-title">Plant Sightings</h1>
        <div>
            <button class="header-button">Home</button>
            <button class="header-button">Overview</button>
            <button class="header-button">Add</button>
            <button class="header-button">Github</button>
        </div>
    </div>
    <form action="/modify/updatePlant" method="POST">
        <input type="hidden" name="_id" value="<%=data._id%>">
        <!-- Title and Description -->
        <div class="title-section">
            <h2 class="title">Edit</h2>
            <p class="description">===========================<%=data.description%>===========================</p>
        </div>

        <!-- Details Section -->
        <div class="details">
            <div class="detail-half">
                <div class="detail-label">Name</div>
                <div class="detail-value">
                    <input type="text" name="name" value="<%=data.identification.name%>">
                </div>

                <div class="detail-label">Description</div>
                <div class="detail-value">
                    <input type="text" name="description" value="<%=data.description%>">
                </div>

                <div class="detail-label">Photo</div>
                <label class="detail-photo">
                    <!-- Assuming you have a URL for the photo -->
                    <label>
                        <input type="file" id="photoInput" name="photo" value="<%=data.photo%>">
                    </label>
                </label>
                <div class="detail-photo">
                    <img class="photoView" id="photoPreview" src="" alt="Photo preview" style="display: none;">
                </div>
                <script>
                    document.getElementById('photoInput').addEventListener('change', function(event) {
                        const file = event.target.files[0];
                        if (file) {
                            // Create a URL for the file
                            const fileUrl = URL.createObjectURL(file);
                            // Set the URL as the src of the <img> element
                            document.getElementById('photoPreview').src = fileUrl;
                            // Make sure the image is visible
                            document.getElementById('photoPreview').style.display = 'block';
                        }
                    });
                </script>
            </div>
            <div class="detail-half">
                <div class="attribute-grid">
                    <!-- Attributes -->
                    <div class="attribute-item">
                        <span class="detail-value-question">Has Flower?</span>
                        <span class="detail-value-question">Has Leaf?</span>
                        <span class="detail-value-question">Has Gain?</span>
                        <span class="detail-value-question">Sun?</span>
                        <span class="detail-value-question">Color</span>
                        <span class="detail-value-question">Plant Size</span>
                        <span class="detail-value-question">Position</span>
                        <span class="detail-value-question">DBPedia</span>
                        <span class="detail-value-question">Your Nick Name</span>
                    </div>
                    <div class="attribute-item">
                        <label class="detail-value-attribute-edit-boolean">
                            True<input type="radio" name="haveFlower" value="true" <%=(data.haveFlower===true)?'checked':''%>>
                            False<input type="radio" name="haveFlower" value="false" <%=(data.haveFlower===false)?'checked':''%>>
                        </label>
                        <label class="detail-value-attribute-edit-boolean">
                            True<input type="radio" name="haveLeaves" value="true" <%=(data.haveLeaves===true)?'checked':''%>>
                            False<input type="radio" name="haveLeaves" value="false" <%=(data.haveLeaves===false)?'checked':''%>>
                        </label>
                        <label class="detail-value-attribute-edit-boolean">
                            True<input type="radio" name="haveSeeds" value="true" <%=(data.haveSeeds===true)?'checked':''%>>
                            False<input type="radio" name="haveSeeds" value="false" <%=(data.haveSeeds===false)?'checked':''%>>
                        </label>
                        <label>
                            <select name="sunExposure" class="detail-value-attribute-edit">
                                <option value="Full Sun" <%=(data.sunExposure==="Full Sun")?'selected':''%>>Full Sun</option>
                                <option value="Partial Shade" <%=(data.sunExposure==="Partial Shade")?'selected':''%>>Partial Shade</option>
                                <option value="Full Shade" <%=(data.sunExposure==="Full Shade")?'selected':''%>>Full Shade</option>
                            </select>
                        </label>
                        <label>
                            <select name="flowerColor" class="detail-value-attribute-edit">
                                <option value="Red" <%=(data.flowerColor==="Red")?'selected':''%>>Red</option>
                                <option value="Yellow" <%=(data.flowerColor==="Yellow")?'selected':''%>>Yellow</option>
                                <option value="White" <%=(data.flowerColor==="White")?'selected':''%>>White</option>
                                <option value="Purple" <%=(data.flowerColor==="Purple")?'selected':''%>>Purple</option>
                                <option value="Orange" <%=(data.flowerColor==="Orange")?'selected':''%>>Orange</option>
                                <option value="Green" <%=(data.flowerColor==="Green")?'selected':''%>>Green</option>
                                <option value="Blue" <%=(data.flowerColor==="Blue")?'selected':''%>>Blue</option>
                                <option value="Pink" <%=(data.flowerColor==="Pink")?'selected':''%>>Pink</option>
                                <option value="Black" <%=(data.flowerColor==="Black")?'selected':''%>>Black</option>
                                <option value="Other" <%=(data.flowerColor==="Other")?'selected':''%>>Other</option>
                            </select>
                        </label>
                        <label>
                            <input class="detail-value-attribute" type="text" name="plantSize" value="<%=data.plantSize%>">
                        </label>
                        <label class = detail-value-attribute-edit-pos>
                            <label>latitude</label>
                            <label>
                                <input class="detail-value-attribute-pos-input" type="text" name="latitude" value="<%=data.location.coordinates[0]%>">
                            </label>
                            <label>longitude</label>
                            <label>
                                <input class="detail-value-attribute-pos-input" type="text" name="longitude" value="<%=data.location.coordinates[1]%>">
                            </label>
                        </label>
                        <label>
                            <button class="detail-value-attribute" onclick="redirectToPlantPage('<%= data.identification.dbpediaInfo.uri %>')">URL</button>
                        </label>
                        <label>
                            <input class="detail-value-attribute" type="text" name="userNickname" value="<%=data.userNickname%>">
                        </label>
                    </div>
                    <!-- Repeat for each attribute -->
                </div>
            </div>
        </div>
        <button type="submit">submit</button>
    </form>
</div>
</body>

</html>
